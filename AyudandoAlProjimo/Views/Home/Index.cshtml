@model List<AyudandoAlProjimo.Data.Propuestas>

@{
    Layout = "~/Views/Shared/BaseLayout.cshtml";
    ViewBag.Title = "VerListaDePropuestas";
}

<form class="form-inline" action="/Propuestas/RealizarBusqueda" method="post">
    <input class="form-control mr-sm-2" type="text" name="texto" placeholder="Buscar">
    <button class="btn btn-success" type="submit">Buscar</button>
</form>

<table class="table">

    <tr>
        <td>Nombre de la propuesta:</td>
    </tr>

    @foreach (var p in Model)
    {
        <tr>
            <td>@p.Nombre</td>
            <td><a href="/Propuestas/VerDetallePropuesta/@p.IdPropuesta">Detalle</a></td>
        </tr>
    }
</table>



