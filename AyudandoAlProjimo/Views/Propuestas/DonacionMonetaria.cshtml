@model AyudandoAlProjimo.Data.Propuestas

@{
    ViewBag.Title = "RealizarDonacionMonetaria";
    Layout = "~/Views/Shared/BaseLayout.cshtml";
}

<div class="abs-center">
    <div class="row">
        <div class="col"></div>
        <div class="col-10">
            <div class="card" style="margin-top: 50px">
                <div class="card-body">
                    <h3 class="card-title">Realizar donación a la propuesta</h3>
                    <h3 class="card-tittle"><strong>@Model.Nombre</strong></h3>

                    <form action="/Propuestas/RealizarDonacionMonetaria" method="post" id="donar-formulario" onsubmit="return validardh(event);">

                        <div class="form-group">
                            <input type="hidden" name="IdPropuestaDonacionMonetaria" value="@Model.PropuestasDonacionesMonetarias.First().IdPropuestaDonacionMonetaria" />
                            <input type="hidden" name="IdUsuario" value="@ViewBag.IdDonante" />
                        </div>

                        <div class="form-group">
                            @Html.Label("Dinero", "Cantidad de dinero que va a donar:")
                            @Html.EditorFor(o => o.PropuestasDonacionesMonetarias.FirstOrDefault().Dinero, new { htmlAttributes = new { type = "number", @class = "form-control" } })
                            @Html.ValidationMessageFor(o => o.PropuestasDonacionesMonetarias.FirstOrDefault().Dinero, "", new { @class = "text-danger" })
                        </div>

                        <div class="form-group">
                            <label>Comprobante de transferencia:</label>
                            <input type="file" name="file" value="" class="form-control" />
                        </div>


                        <input class="btn btn-primary" type="submit" value="Realizar donacion" id="donar-submit" />
                    </form>
                </div>
            </div>
        </div>
        <div class="col"></div>
    </div>
</div>

