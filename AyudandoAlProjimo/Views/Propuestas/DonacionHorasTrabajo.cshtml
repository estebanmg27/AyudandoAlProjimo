@model AyudandoAlProjimo.Data.Propuestas

@{
    ViewBag.Title = "RealizarDonacionDeHorasDeTrabajo";
    Layout = "~/Views/Shared/BaseLayout.cshtml";

}

<div class="abs-center">
    <div class="row">
        <div class="col"></div>
        <div class="col-12">
            <div class="card" style="margin-top: 50px">
                <div class="card-body">
                    <h3 class="card-title">Realizar donación a la propuesta</h3>
                    <h3 class="card-tittle"><strong>@Model.Nombre</strong></h3>

                    <form action="/Propuestas/RealizarDonacionDeHorasDeTrabajo" method="post">

                        <div class="form-group">
                            <input type="hidden" name="IdPropuestaDonacionHorasTrabajo" value="@Model.PropuestasDonacionesHorasTrabajo.First().IdPropuestaDonacionHorasTrabajo" />
                            <input type="hidden" name="IdUsuario" value="@ViewBag.IdDonante" />
                        </div>
                        
                        <div class="form-group">
                            @Html.Label("Cantidad", "Cantidad de horas de trabajo que va a donar:")
                            @*@Html.TextBox("Cantidad", 0, new { @class = "form-control", @type = "number" })*@
                            @Html.EditorFor(o => o.PropuestasDonacionesHorasTrabajo.FirstOrDefault().CantidadHoras, new { htmlAttributes = new { type = "number", @class = "form-control" } })
                            @Html.ValidationMessageFor(o => o.PropuestasDonacionesHorasTrabajo.FirstOrDefault().CantidadHoras, "", new { @class = "text-danger" })
                        </div>

                        <input class="btn btn-primary" type="submit" value="Realizar donacion" />
                    </form>
                </div>
            </div>
        </div>
        <div class="col"></div>
    </div>
</div>



