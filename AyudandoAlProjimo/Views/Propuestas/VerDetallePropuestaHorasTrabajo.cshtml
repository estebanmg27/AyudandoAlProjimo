@model AyudandoAlProjimo.Data.PropuestasDonacionesHorasTrabajo

@{
    ViewBag.TotalDeHorasCubiertas = Model.DonacionesHorasTrabajo.Where(o => o.IdPropuestaDonacionHorasTrabajo == Model.IdPropuestaDonacionHorasTrabajo).Sum(o => o.Cantidad);

    if ((Model.CantidadHoras - ViewBag.TotalDeHoras) < 0)
    {
        ViewBag.HorasRestantes = 0;
    }
    else
    {
        ViewBag.HorasRestantes = Model.CantidadHoras - ViewBag.CantidadDeHorasCubiertas;
    }

    if (ViewBag.HorasRestantes == 0)
    {
        ViewBag.PorcentajeAceptacion = 100;
    }
    else
    {
        ViewBag.PorcentajeAceptacion = (ViewBag.TotalDeHorasCubiertas * 100) / Model.CantidadHoras;
    }
}

Profesion: @Model.Profesion
<br />

La propuesta cuenta con un total de @Model.CantidadHoras horas de las cuales @ViewBag.TotaldeHorasCubiertas fueron cubiertas.
<br />
@ViewBag.HorasRestantes quedan por curbir.
<br />
El porcentaje de aceptación es @ViewBag.PorcentajeAceptacion%



